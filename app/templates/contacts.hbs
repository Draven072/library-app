<h1>Contacts</h1>

<br/><br/>

<div class="container-fluid">
  <form id="contactForm">
<!--  <label for="contactForm" class="col-xs-10">Feedback:</label> -->
    <div class="form-group form-group-lg row">
      <label for="model.inputEmail" class="col-sm-2 col-form-label col-form-label-lg">Email: </label>
      <div class="col-sm-6">
        {{input type="email" id="inputEmail" value=emailContactAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
      </div>
    </div>

    <div class="form-group form-group-lg row">
      <label for="model.inputMessage" class="col-sm-2 col-form-label col-form-label-lg">Message: </label>
      <div class="col-sm-10">
        {{textarea id="inputMessage" value=textContactMessage class="form-control" placeholder="Please type your message here. (At least 5 characters.)"}}
      </div>
    </div>
    <br/>

    <div class="form-group form-group-lg row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3">
        <button disabled={{isDisabled}} {{action 'saveContactMessage'}} class="btn btn-primary btn-lg btn-block">Send Message</button>
      </div>
    </div>
  </form>

  {{#if responseMessage}}
     <div class="alert alert-success">{{responseMessage}}</div>
  {{/if}}

</div>
